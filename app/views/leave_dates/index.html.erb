<p id="notice"><%= notice %></p>

<h1>Listing Leave Dates</h1>

<table>
  <thead>
    <tr>
      <th>Leave date</th>
      <th>Leave type</th>
      <th>Leave</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_dates.each do |leave_date| %>
      <tr>
        <td><%= leave_date.leave_date %></td>
        <td><%= leave_date.leave_type %></td>
        <td><%= leave_date.leave_id %></td>
        <td><%= link_to 'Show', leave_date %></td>
        <td><%= link_to 'Edit', edit_leave_date_path(leave_date) %></td>
        <td><%= link_to 'Destroy', leave_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

